{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@src/*": ["src/*"],
      "@react/*": ["react/*"],
      "@router/*": ["router/*"],
      "@api/*": ["api/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ES2015"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": [".", "src/**/*", "./types", "declaration.d.ts", "global.d.ts"]
}
